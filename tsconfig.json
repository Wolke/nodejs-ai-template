{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
      "@werewolf/core": ["./packages/core/src"],
      "@werewolf/game-flow": ["./packages/game-flow/src"],
      "@werewolf/ai-players": ["./packages/ai-players/src"],
      "@werewolf/common": ["./packages/common/src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/dist"]
}
